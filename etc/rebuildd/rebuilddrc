[build]
check_every = 300
max_threads = 2
max_jobs = 5
kill_timeout = 90
source_cmd = /srv/debuilder/bin/rebuildd_source_cmd ${d} ${a} ${p} ${v}
build_cmd = /srv/debuilder/bin/rebuildd_build_cmd ${d} ${a} ${p} ${v}
post_build_cmd = /srv/debuilder/bin/rebuildd_post_build_cmd ${d} ${a} ${p} ${v}
dists = lucid precise quantal
work_dir = /var/cache/rebuildd/build
database_uri = sqlite:///var/lib/rebuildd/rebuildd.db
build_more_recent = 1
more_archs = any i386
no_system_arch = 0

[mail]
from = rebuildd@localhost
mailto = rebuildd@localhost
subject_prefix = [rebuildd]
smtp_host = localhost
smtp_port = 25

[telnet]
port = 9999
ip = 127.0.0.1
prompt = rebuildd@localhost->
motd = Connected on rebuildd on localhost

[http]
port = 9998
ip = 0.0.0.0
log_lines_nb = 30
templates_dir = /usr/share/rebuildd/templates
cache = 1
logfile = /var/log/rebuildd/httpd.log

[log]
file = /var/log/rebuildd/rebuildd.log
time_format = %Y-%m-%d %H:%M:%S
logs_dir = /var/log/rebuildd/build_logs
mail_failed = 1
mail_successful = 0
