#!/bin/sh

set -eu

. debuilder-paths

. "$DEBUILDER_CONFIG_FILE"

$DEBUILDER_LIBEXECDIR/debuilder-configure

for dist in $DEBUILDER_DISTS; do
    mkdir -p "$DEBUILDER_LOGDIR"
    mkdir -p "$DEBUILDER_RUNDIR"
    inoticoming --logfile "$DEBUILDER_LOGDIR/inoticoming-$dist.log" \
        --pid-file "$DEBUILDER_RUNDIR/inoticoming-$dist.pid" \
        "$DEBUILDER_SPOOLDIR/$dist" \
        --chdir "$DEBUILDER_SPOOLDIR/$dist" \
        --suffix .dsc \
        --stderr-to-log \
        ${DEBUILDER_LIBEXECDIR}/debuilder-add-rebuildd-job {} "$dist" \;
done
